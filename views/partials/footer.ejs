<script>
  const toggleBtn = document.getElementById("modeToggle");
  toggleBtn?.addEventListener("click", () => {
    const html = document.documentElement;
    html.setAttribute(
      "data-bs-theme",
      html.getAttribute("data-bs-theme") === "dark" ? "light" : "dark"
    );
  });
