<%- include('partials/head') %> <%- include('partials/navbar') %>

<section class="text-center">
  <div class="container">
    <h1 class="display-4 fw-bold">Vela: Your Star-Guided Assistant</h1>
    <p class="lead">
      A gentle, neurodivergent-aware scheduling tool built to support your
      mental well-being — not override it.
    </p>
    <a href="/login" class="btn btn-primary btn-lg mt-3">Begin Your Check-In</a>
  </div>
</section>

<section
  class="bg-accent bg-opacity-25 text-center"
  style="background-color: var(--color-accent)"
>
  <div class="container">
    <h2 class="fw-bold mb-4">Celebrate Progress</h2>
    <div class="d-flex justify-content-center gap-5">
      <div>
        <div class="achievement-num">12</div>
        <div>Tasks this week</div>
      </div>
      <div>
        <div class="achievement-num">42</div>
        <div>Tasks this month</div>
      </div>
      <div>
        <div class="achievement-num">310</div>
        <div>Tasks this year</div>
      </div>
    </div>
  </div>
</section>

<section class="text-center">
  <div class="container">
    <h2 class="fw-bold mb-4">Gentle Insights</h2>
    <p class="lead mb-4">
      Track your energy and focus with kind, easy-to-understand visuals.
    </p>
    <img
      src="https://via.placeholder.com/600x300?text=Graph+Visualization"
      class="img-fluid rounded shadow"
      alt="Analytics Graph"
      style="max-width: 600px"
    />
  </div>
</section>

<section
  class="bg-accent bg-opacity-25 text-center"
  style="background-color: var(--color-accent)"
>
  <div class="container">
    <h2 class="fw-bold mb-4">Kind Guidance</h2>
    <ul class="list-unstyled mx-auto" style="max-width: 400px">
      <li>🧘‍♀️ Take 3-minute breaks between long tasks</li>
      <li>💤 Rest when your energy dips — smart self-care</li>
      <li>🎯 Focus on one gentle goal per day</li>
      <li>❤️ Progress at your own pace — healing counts</li>
    </ul>
  </div>
</section>

<section id="checkup" class="text-center">
  <div class="container">
    <h2 class="fw-bold mb-3">How Are You Feeling?</h2>
    <p class="lead mb-4">
      Chat with your AI assistant for a schedule tuned to your mood and energy.
    </p>
    <a href="/ai-checkup" class="btn btn-outline-primary btn-lg"
      >Talk to AI Assistant</a
    >
  </div>
</section>

<section id="login" class="bg-light text-center py-5">
  <div class="container">
    <h2 class="fw-bold mb-3">Log In</h2>
    <p class="mb-4">
      Access your personalized dashboard and scheduling assistant.
    </p>
    <form
      action="/login"
      method="POST"
      class="mx-auto"
      style="max-width: 360px"
    >
      <input
        type="text"
        name="email"
        class="form-control mb-3"
        placeholder="Email"
        required
      />
      <input
        type="password"
        name="password"
        class="form-control mb-3"
        placeholder="Password"
        required
      />
      <button type="submit" class="btn btn-primary w-100">Log In</button>
    </form>
  </div>
</section>

<%- include('partials/footer') %>
